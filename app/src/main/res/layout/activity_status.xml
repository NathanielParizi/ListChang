<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grandient_background3"
    tools:context="com.jtanuki.go.thaichang.StatusActivity">

    <include
        android:id="@+id/statusAppBar"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/status_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/statusAppBar"
        android:layout_marginTop="67dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profileDiscription"
            android:inputType="textShortMessage"
            android:shadowColor="@color/White"
            android:shadowRadius="15" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/update_profile_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/status_input"
        android:layout_marginEnd="59dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:elevation="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="@string/updateProfile"
        android:textColor="@color/White"
        android:textColorHighlight="@color/Honeydew" />


</RelativeLayout>
